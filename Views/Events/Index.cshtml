<link rel="stylesheet" href="~/css/table.css" />
<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Events</a>
</p>

@if (ViewBag.events.Count == 0)
{
    <p>No events yet!</p> 
}
else 
{
    <table>
        <tr>
            <th>ID</th>
            <th>Event</th>
            <th>Description</th>
            <th>Edit</th>
        </tr>
        @foreach (var evt in ViewBag.events)
        {
            <tr>
                <td>@evt.Id</td>
                <td>@evt.Name</td>
                <td>@evt.Description</td>
                <td><a asp-controller="Events" asp-action="Edit" asp-route-eventId="@evt.Id">Edit</a></td>
            </tr>

        }
    </table>
}
