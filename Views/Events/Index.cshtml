@using CodingEvents.Models
 
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Events</a>
</p>

@if (Model.Count == 0)
{
    <p>No events yet!</p> 
}
else 
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Event</th>
                <th>Description</th>
                <th>Location</th>
                <th># Of Attendees</th>
                <th>Contact Email</th>
                <th>Registration Required</th
                <th></th>
            </tr>
        </thead>
        @foreach (var evt in Model)
        {
        <tr>
            <td>@evt.Id</td>
            <td>@evt.Name</td>
            <td>@evt.Description</td>
            <td>@evt.Location</td>
            <td>@evt.NumOfAttendees</td>
            <td>@evt.ContactEmail</td>
            <td>@evt.RegisterRequired</td>
            <td><a asp-controller="Events" asp-action="Edit" asp-route-eventId="@evt.Id">Edit</a></td>
        </tr>

        }
    </table>
}
