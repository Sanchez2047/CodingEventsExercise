@using CodingEvents.Models

@model List<EventCategory>

<h1>Event Categories</h1>

<p>
    <a asp-controller="EventCategory" asp-action="Create">Add Event Category</a>
</p>

@if(Model.Count == 0)
{
    <p>No Categories added yet</p>
}
else
{
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Id</td>
                <td>@cat.Name</td>
            </tr>
        }
    </table>
}

